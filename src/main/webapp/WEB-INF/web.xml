<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/WEB-INF/views/mainPage.jsp</welcome-file>
    </welcome-file-list>

   <filter>
       <filter-name>encodingFilter</filter-name>
       <filter-class>com.mce.shop.filter.EncodingFilter</filter-class>
       <init-param>
           <param-name>encoding</param-name>
           <param-value>utf-8</param-value>
       </init-param>

   </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>LoginUiServlet</servlet-name>
        <servlet-class>com.mce.shop.ui.LoginUiServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginUiServlet</servlet-name>
        <url-pattern>/goLogin</url-pattern>
    </servlet-mapping>




    
    <servlet>
        <servlet-name>Customer</servlet-name>
        <servlet-class>com.mce.shop.controller.CustomerServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReceiveAddress</servlet-name>
        <servlet-class>com.mce.shop.controller.ReceiveAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiveAddress</servlet-name>
        <url-pattern>/receiveaddress</url-pattern>
    </servlet-mapping>
    
    
    
    
    <servlet>
        <servlet-name>shoes</servlet-name>
        <servlet-class>com.mce.shop.controller.ShoesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoes</servlet-name>
        <url-pattern>/shoes</url-pattern>
    </servlet-mapping>
    
    

    
    

</web-app>
