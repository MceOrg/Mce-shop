<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mce.shop.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginUiServlet</servlet-name>
        <servlet-class>com.mce.shop.ui.LoginUiServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginUiServlet</servlet-name>
        <url-pattern>/goLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IsValTel</servlet-name>
        <servlet-class>com.mce.shop.controller.IsValTelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IsValTel</servlet-name>
        <url-pattern>/isvaltel</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
      <welcome-file>/WEB-INF/views/index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
